
@{
    ViewBag.Title = "CreateUser";
}
<style>


    .createUserContainer {
        display: flex;
        flex-direction:column;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    /* Form styles */
    .card {
        width: 100%;
        max-width: 400px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

.card-body {
    padding: 40px;
}

.form-group {
    margin-bottom: 20px;
}

label {
    font-weight: bold;
}

/* Input styles */
    .form-control {
        width: 100%;
        padding: 9px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

.form-control:focus {
    border-color: #80bdff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}
    .password-group {
        position: relative;
    }
    .password-icon {
        width: 13px;
        height: 13px;
        position: absolute;
        bottom:10%;
        right: 10px;
        transform: translateY(-50%);
      cursor: pointer;
      background-color:aliceblue;

    }

/* Button styles */
.btn-primary {
    display: block;
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    border: none;
    border-radius: 5px;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
}

</style>

<div class="createUserContainer">
<h2>Create User</h2>
    <div class="row justify-content-center">
   
            <div class="card">
                <div class="card-body">
                    <form action="@Url.Action("UserList", "Admin")" method="post" class="user-form">
                        <div class="form-group">
                            <label for="username">
                                Username<span style="color:red;">*</span> :
                            </label>
                            <input type="text" id="username" name="Username" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label for="email">Email<span style="color:red;">*</span> :</label>
                            <input type="email" id="email" name="Email" class="form-control" required />
                        </div>
                        <div class="form-group password-group">
                            <label for="password">Set Password<span style="color:red;">*</span> :</label>
                            <input type="password" id="password" name="Password" class="form-control" required />
                            <!-- Password icon -->
                            <img class="password-icon" id="togglePassword" src="~/Content/images/passwordIcon.jpg"/>

                        </div>

                        <div class="form-group">
                            <label for="role">Role<span style="color:red;">*</span> :</label>
                            <select id="role" name="Role" class="form-control" required>
                                <option value="">Select Role</option>
                                <option value="Admin">Admin</option>
                                <option value="Teacher">Teacher</option>
                                <option value="Student">Student</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Create User</button>
                    </form>
                </div>
            </div>
        
    </div>
</div>

<script>
    // JavaScript to toggle password visibility
    const togglePassword = document.getElementById('togglePassword');
    const password = document.getElementById('password');

    togglePassword.addEventListener('click', function () {
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        this.classList.toggle('fa-eye-slash');
    });
</script>