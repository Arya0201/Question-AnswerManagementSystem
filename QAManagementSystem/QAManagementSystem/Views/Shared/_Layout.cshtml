<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Q&A", "Index", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (  @Session["Role"].ToString() == "Admin")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Admin")</li>
                        <li>@Html.ActionLink("Create User", "CreateUser", "Admin")</li>
                        <li>@Html.ActionLink("Users", "UserList", "Admin")</li>
                        <li>@Html.ActionLink("Create QuestionPaper", "CreateQuestionPaper", "QuestionPaper")</li>
                        <li>@Html.ActionLink("QuestionPaperList", "GetQuestionPaper", "Admin")</li>
                        <li>@Html.ActionLink("ManageSubmitedQuestionPaper", "PendingQuestionPaperList", "Admin")</li>
                        <li>@Html.ActionLink("ApprovedQuestionPaper", "ApprovedQuestionPaper", "Admin") </li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    @if (@Session["Role"].ToString() == "Teacher")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Teacher")</li>
                        <li>@Html.ActionLink("Create QuestionPaper", "CreateQuestionPaper", "QuestionPaper")</li>
                        <li>@Html.ActionLink("QuestionPaperList", "GetQuestionPaper", "Teacher")</li>
                        <li>@Html.ActionLink("PendingQuestionPapers", "PendingQuestionPaperList", "Teacher")</li>
                        <li>@Html.ActionLink("ApprovedQuestionPaper", "ApprovedQuestionPaper", "Teacher")</li>
                        <li>@Html.ActionLink("RejectedQuestionPaper", "RejectedQuestionPaper", "Teacher")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }
                    @if (@Session["Role"].ToString() == "Student")
                    {
                        <li>@Html.ActionLink("ShowQuestionPapers", "Index", "Student")</li>
                        <li>@Html.ActionLink("SubmittedQuestionPaper" , "SubmittedQuestionPaper","Student")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
